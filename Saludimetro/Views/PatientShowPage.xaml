<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saludimetro.Views.PatientShowPage"
             Title="{Binding PageTitle}">
    <VerticalStackLayout>
        
        <ActivityIndicator IsRunning="{Binding IsLoadingVisible}" IsVisible="{Binding IsLoadingVisible}" VerticalOptions="Center" HorizontalOptions="Center"/>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding PatientDto.Name}" Margin="0,0,0,10"/>
    </VerticalStackLayout>
</ContentPage>
