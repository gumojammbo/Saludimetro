<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saludimetro.Views.PatientShowPage"
             Title="{Binding PageTitle}"
             Shell.NavBarIsVisible="False">
    <ContentPage Title="IMC">
        <VerticalStackLayout>
             <Label Text="{Binding Bmi}" FontSize="Large"/>
             <Label Text="{Binding Idealweight}" FontSize="Large"/>


        </VerticalStackLayout>
    </ContentPage>
    <ContentPage Title="Grasa Corporal">
        <Label Text="{Binding Bodyfat}" FontSize="Large"/>

    </ContentPage>
    <ContentPage Title="Consumo de calorías">
        <Label Text="{Binding Calorieintake}" FontSize="Large"/>
    </ContentPage>
</TabbedPage>